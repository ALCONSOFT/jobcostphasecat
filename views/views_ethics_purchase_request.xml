<odoo>
    
    <record id="view_purchase_request_form_inherit_ethics_pr" model="ir.ui.view">
        <field name="name">purchase.request.form.inherit.ethicspr</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="ethics_purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            <field name="request_responsible" position="after">
                <field name="vehicle_id" optional="hide"/>
                <field name="account_analytic_id" optional="hide"/>
            </field>
            <xpath expr="//field[@name='vendor_ids']/following-sibling::field[1]" position="after">
                <field name="vehicle_id" optional="hide"/>
            </xpath>

        </field>
    </record>
    
    <!-- Si también necesitas heredar la vista tree -->
    <record id="view_purchase_request_tree_inherit_jobcostphasecat" model="ir.ui.view">
        <field name="name">purchase.request.tree.inherit.jobcostphasecat</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="ethics_purchase_request.view_purchase_request"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <!-- Añade aquí campos adicionales si es necesario, ejemplo: -->
                <field name="vehicle_id" optional="hide"/>
                <field name="account_analytic_id" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>